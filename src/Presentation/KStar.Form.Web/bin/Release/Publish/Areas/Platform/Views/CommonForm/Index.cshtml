@{
    ViewBag.Title = "通用表单";
    Layout = "~/Views/Shared/_KStarFormLayout.cshtml";
}
@section HeadStyle{
    @Html.Raw(ViewBag.Header)

}
@Html.Raw(ViewBag.FormInfo)
@section KStarFormJs{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @Html.Raw(ViewBag.Foot)
    <script type="text/javascript">
        //扩展
        KStarForm.formModelExtend = {
            data: function () {
                return {
                    formContentRules: {
                    }
                }
            },
            mounted: function () {
                this.$nextTick(function () {
                    setTimeout(function () {
                        $(".el-form-item__label").each(function (index, item) {
                            if ($(item).text() == "") {
                                //$(item).removeClass("el-form-item__label");
                                $(item).addClass("empty__label");
                            }
                        });
                    }, 1000);
                });
            },
            watch: {

            },
            //方法
            methods: {
                @Html.Raw(ViewBag.Methods)
            },
            //计算属性
            computed: {
                isEdit: function () {
                    return this.vmFormType == 'Application' || this.vmFormType == 'Draft' || this.vmFormType == 'ReApproval' ? true : false;
                }
            },
        }
    </script>
    <script type="text/javascript">
        @Html.Raw(ViewBag.CustomScript)
    </script>
}
